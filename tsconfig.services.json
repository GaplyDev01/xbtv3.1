{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist/services",
    "rootDir": "./src/services",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/services/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
